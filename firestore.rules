rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Daily items - uygulama okuyabilir (auth yok), sadece Functions yazabilir
    match /daily_items/{itemId} {
      allow read: if true;
      allow write: if false;
    }
    match /daily_state/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}


